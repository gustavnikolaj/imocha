{
  "name": "imocha",
  "version": "0.5.0",
  "description": "Standalone watch mode for mocha.",
  "scripts": {
    "preversion": "npm test",
    "postpublish": "git push origin --all && git push origin --tags",
    "postversion": "npm publish",
    "coverage": "nyc mocha",
    "lint": "eslint .",
    "test": "mocha",
    "test-watch": "./bin/imocha"
  },
  "bin": {
    "imocha": "bin/imocha"
  },
  "keywords": [
    "mocha-watch",
    "mocha",
    "watch"
  ],
  "author": "Gustav Nikolaj <gustavnikolaj@gmail.com>",
  "repository": "github:gustavnikolaj/imocha",
  "license": "MIT",
  "engines": {
    "node": ">=8.3.0"
  },
  "peerDependencies": {
    "mocha": ">2.2.4"
  },
  "devDependencies": {
    "coveralls": "^3.0.4",
    "eslint": "^6.0.1",
    "eslint-config-pretty-standard": "^2.0.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-prettier": "^3.1.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "unexpected": "^11.6.1"
  },
  "dependencies": {
    "@gustavnikolaj/async-main-wrap": "^3.0.1",
    "@gustavnikolaj/find-relations-in-js": "^1.2.0",
    "chokidar": "^3.0.1",
    "commander": "2.15.1",
    "minimatch": "3.0.4"
  },
  "nyc": {
    "cache": true,
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  }
}
