{
  "name": "imocha",
  "version": "0.9.2",
  "description": "Standalone watch mode for mocha.",
  "scripts": {
    "preversion": "npm test",
    "postpublish": "git push origin --all && git push origin --tags",
    "postversion": "npm publish",
    "coverage": "nyc mocha",
    "lint": "eslint . && prettier --check '**/*.js'",
    "test": "mocha",
    "test-watch": "./bin/imocha"
  },
  "bin": {
    "imocha": "bin/imocha"
  },
  "keywords": [
    "mocha-watch",
    "mocha",
    "watch"
  ],
  "author": "Gustav Nikolaj <gustavnikolaj@gmail.com>",
  "repository": "github:gustavnikolaj/imocha",
  "license": "MIT",
  "engines": {
    "node": ">=8.3.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.7",
    "eslint": "^6.5.1",
    "eslint-config-pretty-standard": "^2.0.1",
    "eslint-plugin-import": "^2.18.2",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "unexpected": "^11.8.0"
  },
  "dependencies": {
    "@gustavnikolaj/find-relations-in-js": "^2.0.0",
    "chokidar": "^3.2.2",
    "debug": "^4.1.1",
    "minimatch": "3.0.4",
    "mocha": "^6.2.1",
    "resolve-from": "^5.0.0"
  },
  "nyc": {
    "cache": true,
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  }
}
